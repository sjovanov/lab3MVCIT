@model List<Lab3.Models.FriendModel>
@{
    ViewBag.Title = "All";
}
<a href="~/Friend/Add" class="btn btn-primary" style="margin-top: 5px">Add a new friend!</a>
<table id="tabela" class="table text-center">
    <thead>
        <tr>
            <th class="text-center">Friend ID.</th>
            <th class="text-center">Friend Name</th>
            <th class="text-center">Place</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var prom in Model)
            {
                <tr>
                    <td>@prom.id</td>
                    <td>@prom.ime</td>
                    <td>@prom.mestoNaZiveenje</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = prom.id }, new { @class = "btn btn-primary" })@Html.ActionLink("Delete", "DeleteFriend", new { id = prom.id }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        }
    </tbody>
    @section Scripts{
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable();
        });
    </script>
    }

</table>

